<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

    <!-- autoMappingBehavior should be set in each test case -->

    <!-- 设置属性，多数时候只需要引进resource即可 -->
    <properties resource="org/apache/ibatis/autoconstructor/config.properties">
        <property name="username" value="sa"/>
        <!-- 无法使用占位符 -->
        <property name="abc" value="${username:ddd}"/>
    </properties>

    <!-- 设置mybatis配置，会根据name修改org.apache.ibatis.session.Configuration里的字段或属性 -->
    <settings>
        <setting name="lazyLoadingEnabled" value="false"/>
        <setting name="logImpl" value="NO_LOGGING"/>
        <setting name="logPrefix" value="MyLogPre"/>
    </settings>

    <typeAliases>
        <typeAlias alias="primSubject" type="org.apache.ibatis.autoconstructor.PrimitiveSubject" ></typeAlias>
        <package name="org.apache.ibatis.autoconstructor" />
    </typeAliases>

    <!--<typeHandlers>
        <typeHandler handler="abc"/>
    </typeHandlers>-->

<!--    <objectFactory type="org.apache.ibatis.submitted.global_variables_defaults.SupportClasses.CustomObjectFactory" >
        <property name="abc" value="abc"/>
    </objectFactory>-->

<!--    <objectWrapperFactory type="abc"/>

    <reflectorFactory type="abc" />-->

<!--    <plugins>
        <plugin interceptor="abc"></plugin>
    </plugins>-->

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC">
                <property name="" value=""/>
            </transactionManager>
            <dataSource type="UNPOOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
            </dataSource>
        </environment>
    </environments>

    <databaseIdProvider type="DB_VENDOR"/>


    <mappers>
        <mapper resource="org/apache/ibatis/autoconstructor/AutoConstructorMapper.xml"/>
    </mappers>

</configuration>
